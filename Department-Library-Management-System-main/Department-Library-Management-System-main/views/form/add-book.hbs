<div class="col-sm-6 col-md-6 col-sm-offset-3">
    <form action="/book/add-book" method="post" class="book-form">
        <!-- Stylish Google Font -->
        <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;600;700&display=swap" rel="stylesheet">

        <!-- Your Style Tag is perfect -->
        <style>
            body {
                font-family: 'Quicksand', sans-serif;
            }

            .book-form {
                font-family: 'Quicksand', sans-serif;
                font-weight: 600;
                max-width: 500px;
                width: 100%;
                margin: 70px auto;
                padding: 3rem;
                background: #ffffff;
                border-radius: 20px;
                box-shadow: 0 12px 30px rgba(0, 0, 0, 0.12);
                opacity: 0.97;
            }

            .book-form h1 {
                text-align: center;
                margin-bottom: 2.5rem;
                font-size: 2.2rem;
                color: #222;
                font-weight: 700;
                letter-spacing: 1px;
            }

            .book-form .form-group {
                margin-bottom: 1.6rem;
            }

            .book-form label {
                display: block;
                margin-bottom: 0.5rem;
                color: #444;
                font-weight: 700;
                font-size: 1.3rem;
            }

            .book-form input.form-control {
                width: 100%;
                padding: 1rem 1.1rem;
                font-size: 1.1rem;
                background-color: #f1f4f6;
                color: #333;
                border: 1px solid #ccc;
                border-radius: 12px;
                outline: none;
                transition: all 0.3s ease;
            }

            .book-form input.form-control:focus {
                border-color: #4a90e2;
                box-shadow: 0 0 8px rgba(74, 144, 226, 0.3);
                background-color: #fff;
            }

            .book-form .btn {
                width: 100%;
                padding: 1rem;
                background: linear-gradient(to right, #4a90e2, #357ABD);
                color: #fff;
                font-size: 1.2rem;
                font-weight: 700;
                border: none;
                border-radius: 12px;
                cursor: pointer;
                transition: all 0.3s ease;
            }

            .book-form .btn:hover {
                background: linear-gradient(to right, #357ABD, #4a90e2);
                transform: scale(1.02);
                box-shadow: 0 4px 14px rgba(74, 144, 226, 0.4);
            }
        </style>

        <!-- Form Fields -->
        <h1>New Book</h1>

        <div class="form-group">
            <label for="book_name">Book Name:</label>
            <input type="text" name="book_name" class="form-control" id="book_name">
        </div>
        <div class="form-group">
            <label for="cover_image">Cover Image</label>
            <input type="text" name="cover_image" class="form-control" id="cover_image">
        </div>
        <div class="form-group">
            <label for="author_name">Author Name:</label>
            <input type="text" name="author_name" class="form-control" id="author_name">
        </div>
        <div class="form-group">
            <label for="isbn">ISBN:</label>
            <input type="text" name="isbn" class="form-control" id="isbn">
        </div>
        <div class="form-group">
            <label for="genres">Genres:</label>
            <input type="text" name="genres" class="form-control" id="genres">
        </div>
        <div class="form-group">
            <label for="publisher">Publisher:</label>
            <input type="text" name="publisher" class="form-control" id="publisher">
        </div>
        <div class="form-group">
            <label for="quantity">Quantity:</label>
            <input type="text" name="quantity" class="form-control" id="quantity">
        </div>
       
        <button type="submit" class="btn btn-default btn-primary">Add Book</button>
    </form>
</div>
