<form action="/user/signup" method="post">
    <h1>Signup</h1>
<!-- Include Google Font -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
    }

    form {
        font-family: 'Poppins', sans-serif;
        font-weight: bolder;
        max-width: 480px;
        width: 100%;
        margin: 50px auto;
        padding: 2.5rem 2.5rem;
        background: #ffffff;
        border-radius: 18px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        opacity: 0.9;
    }

    h1 {
        text-align: center;
        margin-bottom: 2rem;
        font-size: 2rem;
        color: #333;
        font-weight: 600;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    label {
        display: block;
        margin-bottom: 0.6rem;
        color: #333;
        font-weight: bolder;
        font-size: 1.5rem;
    }

    input.form-control,
    select {
        width: 100%;
        padding: 0.9rem 1rem;
        font-size: 1.05rem;
        background-color: #f8f9fa;
        color: #333;
        border: 1px solid #ccc;
        border-radius: 10px;
        outline: none;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    input.form-control:focus,
    select:focus {
        border-color: #4a90e2;
        box-shadow: 0 0 6px rgba(74, 144, 226, 0.3);
    }

    select {
        appearance: none;
        background-image: url("data:image/svg+xml;charset=US-ASCII,%3Csvg%20width%3D%2210%22%20height%3D%227%22%20viewBox%3D%220%200%2010%207%22%20fill%3D%22none%22%20xmlns%3D%22http://www.w3.org/2000/svg%22%3E%3Cpath%20d%3D%22M1%201L5%205L9%201%22%20stroke%3D%22%23333%22%20stroke-width%3D%222%22/%3E%3C/svg%3E");
        background-repeat: no-repeat;
        background-position: right 1rem center;
        background-size: 12px;
    }

    .btn {
        width: 100%;
        padding: 0.9rem;
        background-color: #4a90e2;
        color: white;
        font-size: 1.1rem;
        font-weight: 600;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        margin-top: 1.2rem;
    }

    .btn:hover {
        background-color: #357ABD;
    }
</style>



    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" name="name" required>
    </div>
    <div class="form-group">
        <label for="batch">Batch:</label>
        <input type="text" class="form-control" id="batch" name="batch" required>
    </div>
    <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" class="form-control" id="email" name="email" required>
    </div>
    <div class="form-group">
        <label for="pwd">Password:</label>
        <input type="password" class="form-control" id="pwd" name="password" required>
    </div>
    <div class="form-group">
        <label for="pwd">Role:</label>
        <select name="role">
            <option value="STUDENT">Student</option>
            <option value="ADMIN">Admin</option>
            <option value="TEACHER">Facuty</option>
        </select>
    </div>
    <button type="submit" class="btn btn-default">Signup</button>
</form>